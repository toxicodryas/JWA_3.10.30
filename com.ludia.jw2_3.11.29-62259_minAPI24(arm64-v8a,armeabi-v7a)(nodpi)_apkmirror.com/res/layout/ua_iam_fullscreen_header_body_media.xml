<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <ScrollView android:layout_width="fill_parent" android:layout_height="fill_parent" android:fillViewport="true" style="@style/UrbanAirship.InAppFullscreen.ScrollView">
        <RelativeLayout android:id="@id/content_holder" android:layout_width="fill_parent" android:layout_height="wrap_content" style="@style/UrbanAirship.InAppFullscreen.Layout.HeaderBodyMedia">
            <TextView android:id="@id/heading" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_alignParentTop="true" style="@style/UrbanAirship.InAppFullscreen.Heading.HeaderBodyMedia" />
            <TextView android:id="@id/body" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_below="@id/heading" style="@style/UrbanAirship.InAppFullscreen.Body.HeaderBodyMedia" />
            <com.urbanairship.iam.view.MediaView android:id="@id/media" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_below="@id/body" style="@style/UrbanAirship.InAppFullscreen.MediaView.HeaderBodyMedia" />
            <com.urbanairship.iam.view.InAppButtonLayout android:id="@id/buttons" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_below="@id/media" style="@style/UrbanAirship.InAppFullscreen.ButtonLayout" />
            <FrameLayout android:id="@id/footer_holder" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_below="@id/buttons" android:layout_alignParentBottom="true" style="@style/UrbanAirship.InAppFullscreen.FooterHolder">
                <Button android:id="@id/footer" android:layout_width="wrap_content" android:layout_height="wrap_content" style="@style/UrbanAirship.InAppFullscreen.Footer" />
            </FrameLayout>
        </RelativeLayout>
    </ScrollView>
    <FrameLayout android:layout_width="wrap_content" android:layout_height="wrap_content" style="@style/UrbanAirship.InAppFullscreen.DismissButtonHolder">
        <ImageButton android:id="@id/dismiss" android:layout_width="wrap_content" android:layout_height="wrap_content" android:contentDescription="@string/ua_cancel" style="@style/UrbanAirship.InAppFullscreen.DismissButton" />
    </FrameLayout>
</FrameLayout>